{
  "name": "realchemy",
  "version": "1.0.0",
  "main": "electron.js",
  "scripts": {
    "start": "webpack-dev-server -d --open",
    "production": "webpack-dev-server -p",
    "type_check": "cd ./src && tsc --noEmit",
    "lint": "eslint . --ext .js,.ts,.tsx --cache",
    "format": "npm run type_check && npm run lint",
    "clear": "yes | rm -r ./build",
    "webpack_build": "webpack -p",
    "copy_public": "cp -r ./public/. ./build",
    "build": "[ -d './build' ]; npm run clear; npm run webpack_build && npm run copy_public",
    "electron": "concurrently --kill-others-on-fail --kill-others 'webpack-dev-server -d' 'wait-on http://localhost:3000 && electron .'",
    "electron_prod": "electron . --noDevServer"
  },
  "author": "Timothy Malstead timmalstead@gmail.com",
  "coypright": "Â©2020 Timothy Malstead -- this software may not be copied or modified, in whole or in part without express and explicit permission from owner (Timothy Malstead)",
  "dependencies": {
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "styled-components": "^5.1.1"
  },
  "devDependencies": {
    "@babel/core": "^7.10.5",
    "@babel/preset-env": "^7.10.4",
    "@babel/preset-react": "^7.10.4",
    "@babel/preset-typescript": "^7.10.4",
    "@gfx/zopfli": "^1.0.14",
    "@types/react": "^16.9.43",
    "@types/react-dom": "^16.9.8",
    "@types/styled-components": "^5.1.1",
    "@typescript-eslint/eslint-plugin": "^3.7.0",
    "@typescript-eslint/parser": "^3.7.0",
    "babel-loader": "^8.1.0",
    "compression-webpack-plugin": "^4.0.0",
    "concurrently": "^5.3.0",
    "electron": "^9.2.1",
    "eslint": "^7.5.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-prettier": "^3.1.4",
    "eslint-plugin-react": "^7.20.3",
    "file-loader": "^6.0.0",
    "prettier": "^2.0.5",
    "typescript": "^3.9.7",
    "wait-on": "^5.2.0",
    "webpack": "^4.44.0",
    "webpack-cli": "^3.3.12",
    "webpack-dev-server": "^3.11.0"
  }
}
